{
  "extends": ["config:base", ":pinAllExceptPeerDependencies"],
  "groupName": "all",
  "automerge": true,
  "major": {
    "automerge": false
  },
  "transitiveRemediation": true,
  "packageRules": [
    {
      "matchPackageNames": ["react", "react-dom", "react-test-renderer"],
      "groupName": "React Core",
      "allowedVersions": "17.0.2",
      "automerge": true
    },
    {
      "matchPackageNames": ["react-router-dom-v5-compat"],
      "groupName": "React Router Dom v5 compat",
      "allowedVersions": "^6.22.0",
      "automerge": true
    }
  ],
  "separateMajorMinor": true,
  "separateMultipleMajor": true
}
